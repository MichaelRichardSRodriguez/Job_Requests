@page
@model LockoutModel
@{
    ViewData["Title"] = "Locked out";
}

<style>
    .error-box {
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
        border: 1px solid #ddd;
    }

    .error-code {
        font-size: 100px;
        color: #e74c3c;
        margin: 0;
    }

    .error-message {
        font-size: 24px;
        font-weight: bold;
        color: #333;
    }

    .error-description {
        font-size: 16px;
        color: #666;
        margin-top: 10px;
    }

</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="error-box col-lg-6 col-md-8 col-sm-12 col-12">
            <h1 class="error-code">@ViewData["Title"]</h1>
            <p class="error-description">
                This account has been locked out, please try again later.
            </p>
            <a href="/" class="btn btn-primary">Go to Homepage</a>
        </div>
    </div>
</div>
