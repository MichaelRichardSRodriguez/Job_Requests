@model Job_Requests.Models.JobPriority

@{
    ViewData["Title"] = "Create Priority Level";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Card -->
            <div class="card shadow-lg rounded">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h4 class="mb-0"><i class="bi bi-archive"></i> @ViewData["Title"]</h4>
                </div>
                <div class="card-body p-3">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="PriorityLevel" class="control-label fw-bold"></label>
                            <input asp-for="PriorityLevel" class="form-control" autofocus />
                            <span asp-validation-for="PriorityLevel" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PriorityDescription" class="control-label fw-bold"></label>
                            <textarea asp-for="PriorityDescription" class="form-control" style="height: 150px;"></textarea>
                            <span asp-validation-for="PriorityDescription" class="text-danger"></span>
                        </div>

                        <div class="form-group d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-success shadow">
                                <i class="bi bi-floppy"></i> Submit
                            </button>
                            <a asp-action="Index" class="btn btn-outline-dark shadow">
                                <i class="bi bi-arrow-left-square"></i> Back
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
