@model Job_Requests.Models.JobPriority

@{
	ViewData["Title"] = "Delete Priority Level";
}

<div class="container py-5">
	<div class="row justify-content-center">
		<div class="col-md-8 col-lg-6">
			<!-- Card -->
			<div class="card shadow-lg rounded">
				<div class="card-header bg-danger text-white text-center py-4">
					<!-- Icon in the Header -->
					<h4 class="mb-0"><i class="bi bi-trash-fill"></i> @ViewData["Title"]</h4>
				</div>
				<div class="card-body p-3">
					<!-- Job Request Details -->
					<dl class="row">
						<dt class="col-sm-3">
							@Html.DisplayNameFor(model => model.PriorityLevel)
						</dt>
						<dd class="col-sm-9">
							@Html.DisplayFor(model => model.PriorityLevel)
						</dd>
						<dt class="col-sm-3">
							@Html.DisplayNameFor(model => model.PriorityDescription)
						</dt>
						<dd class="col-sm-9">
							@Html.DisplayFor(model => model.PriorityDescription)
						</dd>
						<dt class="col-sm-3">
							@Html.DisplayNameFor(model => model.Status)
						</dt>
						<dd class="col-sm-9">
							@if (Model?.Status == RecordStatusEnum.Active)
							{
								<span class="badge bg-success text-white"><strong>@Html.DisplayFor(model => model.Status)</strong></span>
							}
							else
							{
								<span class="badge bg-danger text-white"><strong>@Html.DisplayFor(model => model.Status)</strong></span>
							}
						</dd>
						<dt class="col-sm-3">
							@Html.DisplayNameFor(model => model.CreatedDate)
						</dt>
						<dd class="col-sm-9">
							@Html.DisplayFor(model => model.CreatedDate)
						</dd>
						@if (Model?.UpdatedDate != null)
						{
							<dt class="col-sm-3">
								@Html.DisplayNameFor(model => model.UpdatedDate)
							</dt>
							<dd class="col-sm-9">
								@Html.DisplayFor(model => model.UpdatedDate)
							</dd>
						}
					</dl>

					<!-- Confirmation Section -->
					<h5 class="text-danger">Are you sure you want to delete this Job Type?</h5>

					<form asp-action="Delete">
						<input type="hidden" asp-for="JobPriorityId" />
						<div class="d-flex justify-content-between mt-4">
							<button type="submit" class="btn btn-danger shadow">
								<i class="bi bi-trash"></i> Delete
							</button>
							<a asp-action="Index" class="btn btn-outline-dark shadow">
								<i class="bi bi-arrow-left-square"></i> Back
							</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>