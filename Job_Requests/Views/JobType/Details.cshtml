@model Job_Requests.Models.JobType

@{
    ViewData["Title"] = "Job Type Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Card -->
            <div class="card shadow-lg rounded">
                <div class="card-header bg-primary text-white text-center py-4">
                    <!-- Icon in the Header -->
                    <h4 class="mb-0"><i class="bi bi-info-circle-fill"></i> @ViewData["Title"]</h4>
                </div>
                <div class="card-body p-3">
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.JobTypeName)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.JobTypeName)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.JobTypeDescription)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.JobTypeDescription)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Status)
                        </dt>
                        <dd class="col-sm-9">
                            @if (Model?.Status == RecordStatusEnum.Active)
                            {
                                <span class="badge bg-success text-white"><strong>@Html.DisplayFor(model => model.Status)</strong></span>
                            }
                            else
                            {
                                <span class="badge bg-danger text-white"><strong>@Html.DisplayFor(model => model.Status)</strong></span>
                            }
                        </dd>

                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.CreatedDate)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.CreatedDate)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.UpdatedDate)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.UpdatedDate)
                        </dd>
                    </dl>

                    <!-- Notice if Request Status is not Pending -->
                    <div class="mt-4">
                        @if (Model?.Status == RecordStatusEnum.Inactive)
                        {
                            <div class="alert alert-warning mt-3">
                                <strong>Notice: </strong>Unable to modify INACTIVE record.
                            </div>
                        }
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between mt-4">
                        @if (Model.Status == RecordStatusEnum.Active)
                        {
                            <a asp-action="Edit" asp-route-id="@Model?.JobTypeId" class="btn btn-success shadow">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                        }
                        else
                        {
                            <a asp-action="Edit" asp-route-id="@Model?.JobTypeId" class="btn btn-secondary disabled">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                        }

                        <a asp-action="Index" class="btn btn-outline-dark shadow">
                            <i class="bi bi-arrow-left-square"></i> Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>