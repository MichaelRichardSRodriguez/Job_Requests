@model Job_Requests.Models.JobRequest

@{
    ViewData["Title"] = "Job Request Details";
    var statusStyle = string.Empty;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Card -->
            <div class="card shadow-lg rounded">
                <div class="card-header bg-primary text-white text-center py-4">
                    <!-- Icon in the Header -->
                    <h4 class="mb-0"><i class="bi bi-info-circle-fill"></i> @ViewData["Title"]</h4>
                </div>
                <div class="card-body p-3">
                    <!-- Job Request Details -->
                    <dl class="row mb-4">
                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.Department)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Department.DepartmentDescription)
                        </dd>
                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.JobDescription)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.JobDescription)
                        </dd>
                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.RequestDate)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.RequestDate)
                        </dd>
                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.DateCompleted)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.DateCompleted)
                        </dd>
                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.Status)
                        </dt>
                        <dd class="col-sm-8">
                            @switch (Model.Status)
                            {
                                case JobStatusEnum.Pending:
                                    statusStyle = "badge bg-secondary text-white";
                                    break;
                                case JobStatusEnum.InProgress:
                                    statusStyle = "badge bg-primary text-white";
                                    break;
                                case JobStatusEnum.Completed:
                                    statusStyle = "badge bg-success text-white";
                                    break;
                                case JobStatusEnum.Cancelled:
                                    statusStyle = "badge bg-danger text-white";
                                    break;
                            }
                            <span class="@statusStyle">
                                <strong>@Html.DisplayFor(model => model.Status)</strong>
                            </span>
                        </dd>
                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.Remarks)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Remarks)
                        </dd>
                    </dl>

                    <!-- Notice if Request Status is not Pending -->
                    <div class="mt-4">
                        @if (Model.Status != JobStatusEnum.Pending)
                        {
                            <div class="alert alert-warning mt-3">
                                <strong>Unable to modify IN PROGRESS, COMPLETED, and CANCELLED requests.</strong>
                            </div>
                        }
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between mt-4">
                        @if (Model.Status != JobStatusEnum.Pending)
                        {
                            <!-- Disabled Edit Button -->
                            <a asp-action="Edit" asp-route-id="@Model?.JobRequestId" class="btn btn-secondary disabled">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                        }
                        else
                        {
                            <!-- Active Edit Button -->
                            <a asp-action="Edit" asp-route-id="@Model?.JobRequestId" class="btn btn-success shadow">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                        }

                        <!-- Back Button -->
                        <a asp-action="Index" class="btn btn-outline-dark shadow">
                            <i class="bi bi-arrow-left-square-fill"></i> Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>