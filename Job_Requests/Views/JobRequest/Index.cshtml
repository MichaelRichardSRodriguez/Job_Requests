
@model IEnumerable<Job_Requests.Models.JobRequest>

@{
	ViewData["Title"] = "Job Requests";
	var statusStyle = string.Empty;
}

<div class="d-flex justify-content-between align-items-center">
	<div>
		<h2>@ViewData["Title"]</h2>
	</div>
	<div>
		<a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square-fill"></i> Create</a>
		<a asp-action="Print" class="btn btn-outline-primary"><i class="bi bi-printer-fill"></i> Print</a>
	</div>
</div>

<table class="table table-hover">
	<thead>
		<tr class="table-primary">
			<th>
				@Html.DisplayNameFor(model => model.Department)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.JobDescription)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.RequestDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DateCompleted)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Status)
			</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr class="table-light">
				<td>
					<strong>@Html.DisplayFor(modelItem => item.Department.DepartmentName)</strong>
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.JobDescription)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.RequestDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DateCompleted)
				</td>
				<td>

					@switch (item.Status)
					{
						case JobStatusEnum.Pending:
							statusStyle = "bg-secondary";
							break;
						case JobStatusEnum.InProgress:
							statusStyle = "bg-primary";
							break;
						case JobStatusEnum.Completed:
							statusStyle = "bg-success";
							break;
						case JobStatusEnum.Cancelled:
							statusStyle = "bg-danger";
							break;

					}

					<span class="badge rounded-pill @statusStyle">
						@Html.DisplayFor(modelItem => item.Status)
					</span>
					 
				</td>

				<td>
					<a asp-action="Edit" asp-route-id="@item.JobRequestId" class="btn btn-success btn-sm"><i class="bi bi-pencil-square"></i> Edit</a>
					<a asp-action="Details" asp-route-id="@item.JobRequestId" class="btn btn-primary btn-sm"><i class="bi bi-info-square"></i> Details</a>
					<a asp-action="Manage" asp-route-id="@item.JobRequestId" class="btn btn-warning btn-sm"><i class="bi bi-gear"></i> Manage</a>
					<a asp-action="Delete" asp-route-id="@item.JobRequestId" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</a>

				</td>
			</tr>
		}
	</tbody>
</table>
