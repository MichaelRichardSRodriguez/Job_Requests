@model Job_Requests.Models.Department

@{
    ViewData["Title"] = "Create Department";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DepartmentName" class="control-label"></label>
                <input asp-for="DepartmentName" class="form-control" autofocus/>
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentDescription" class="control-label"></label>
                <textarea asp-for="DepartmentDescription" class="form-control" style="height:150px;"></textarea>
                <span asp-validation-for="DepartmentDescription" class="text-danger"></span>
            </div>
            <div class="form-group justify-content-between mt-3">
                <button type="submit" class="btn btn-success"> <i class="bi bi-floppy"></i> Submit</button>
                <a asp-action="Index" class="btn btn-outline-dark"><i class="bi bi-arrow-left-square"></i> Back</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
