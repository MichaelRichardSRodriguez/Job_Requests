@model Job_Requests.Models.Department

@{
	ViewData["Title"] = "Delete Department";
}

<h4>Are you sure you want to delete this Department?</h4>
<div>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.DepartmentName)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.DepartmentName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.DepartmentDescription)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.DepartmentDescription)
		</dd>
	</dl>

	<form asp-action="Delete">
		<input type="hidden" asp-for="DepartmentId" />
		<button type="submit" class="btn btn-danger"> <i class="bi bi-trash"></i> Delete</button>
		<a asp-action="Index" class="btn btn-outline-dark"><i class="bi bi-arrow-left-square"></i> Back</a>
	</form>
</div>
