@model Job_Requests.Models.Department

@{
    ViewData["Title"] = "Department Details";
}

<h4>@ViewData["Title"]</h4>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DepartmentName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartmentName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DepartmentDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartmentDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            
            @if (Model.Status == RecordStatusEnum.Active)
            {
                <span class="text-success"><strong>@Html.DisplayFor(model => model.Status)</strong></span>
            }
            else
            {
                <span class="text-danger"><strong>@Html.DisplayFor(model => model.Status)</strong></span>
            }
        </dd>
    </dl>
</div>
<div class="form-group justify-content-between mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.DepartmentId" class="btn btn-success"><i class="bi bi-pencil-square"></i> Edit</a>
    <a asp-action="Index" class="btn btn-outline-dark"><i class="bi bi-arrow-left-square"></i> Back</a>
</div>
