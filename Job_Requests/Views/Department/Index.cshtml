@model IEnumerable<Job_Requests.Models.Department>

@{
	ViewData["Title"] = "Departments";
	var statusStyle = string.Empty;
}

<div class="d-flex justify-content-between align-items-center">
	<div>
		<h2>@ViewData["Title"]</h2>
	</div>
	<div>
		<a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square-fill"></i> Create</a>
		<a asp-action="Print" class="btn btn-outline-primary"><i class="bi bi-printer-fill"></i> Print</a>
	</div>
</div>

<table class="table table-hover">
	<thead>
		<tr class="table-primary">
			<th>
				@Html.DisplayNameFor(model => model.DepartmentName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DepartmentDescription)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Status)
			</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr class="table-light">
				<td>
					<strong>@Html.DisplayFor(modelItem => item.DepartmentName)</strong>
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DepartmentDescription)
				</td>
				<td>
					@if (item.Status == RecordStatusEnum.Active)
					{
						statusStyle = "bg-success";
					}
					else
					{
						statusStyle = "bg-dark";
					}

					<span class="badge rounded-pill @statusStyle">
						@Html.DisplayFor(modelItem => item.Status)
					</span>

				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.DepartmentId" class="btn btn-success btn-sm"><i class="bi bi-pencil-square"></i> Edit</a>
					<a asp-action="Details" asp-route-id="@item.DepartmentId" class="btn btn-primary btn-sm"><i class="bi bi-info-square"></i> Details</a>
					<a asp-action="Manage" asp-route-id="@item.DepartmentId" class="btn btn-warning btn-sm"><i class="bi bi-gear"></i> Manage</a>
					<a asp-action="Delete" asp-route-id="@item.DepartmentId" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
